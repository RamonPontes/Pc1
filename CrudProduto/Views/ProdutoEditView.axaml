<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="CrudProduto.Views.ProdutoEditView"
        Title="ProdutoEditView">

    <Border Margin="50">
      <StackPanel Orientation="Vertical">
        <TextBlock>Id</TextBlock>
        <TextBox Text="{Binding ProdutoAtual.Id}" IsReadOnly="true" />
        <TextBlock>Nome</TextBlock>
        <TextBox Text="{Binding ProdutoAtual.Nome}" />
        <TextBlock>Valor</TextBlock>
        <TextBox Text="{Binding ProdutoAtual.Valor}" />
        <Button Command="{Binding Salva}">Salvar</Button>
      </StackPanel>
    </Border>
</Window>
