<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="NewPong.MainWindow"
        Title="Pong Game" Width="1600" Height="800">
        <Canvas>
            <Image x:Name="ball" Width="20" Height="20" Canvas.Left="100" Canvas.Top="250" />
            <Image x:Name="leftPaddle" Width="70" Height="100" Canvas.Left="20" Canvas.Top="250"/>
            <Image x:Name="rightPaddle" Width="70" Height="100" Canvas.Left="1500" Canvas.Top="250"/>
            <TextBlock Name="score" FontSize="30" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        </Canvas>
</Window>
